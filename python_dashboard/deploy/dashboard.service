[Unit]
Description=Carnaval Dashboard API Server
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/carnaval/python_dashboard/api_server
Environment="PATH=/var/www/carnaval/.venv/bin"
Environment="CARNAVAL_API_URL=http://192.168.40.100"
ExecStart=/var/www/carnaval/.venv/bin/gunicorn --worker-class eventlet -w 1 --bind 127.0.0.1:5000 api_server:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
